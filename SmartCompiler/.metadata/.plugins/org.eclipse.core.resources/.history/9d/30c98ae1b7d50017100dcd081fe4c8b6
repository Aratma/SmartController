#ifndef MESSAGE_H_
#define MESSAGE_H_

#include <string>


namespace MessageManager {

enum E_MESSAGE_TYPE
{
	UNKNOWN_MSG,
};


class Message
{
public:
	Message();
	virtual ~Message();

private:
	E_MESSAGE_TYPE m_msgType;
	string m_msgText;
};


} /* namespace MessageManager */
#endif /* MESSAGE_H_ */
