#ifndef SCANNER_H_
#define SCANNER_H_

enum EScannerState {START,INASSIGN,INCOMMENT,INNUM,INID,DONE };


class Scanner
{
public:
	Scanner();
	virtual ~Scanner();

public:
	void getNextToken(Token& nextToken);

public:
	void setSourceFile(const char* pSrcFileName);
	void setState(ScannerState* pState);

private:
	ScannerState* m_pState;
	SourceFile* m_pSrcFile;
};

#endif /* SCANNER_H_ */
