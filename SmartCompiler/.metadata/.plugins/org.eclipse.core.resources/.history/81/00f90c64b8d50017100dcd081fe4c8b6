#ifndef MESSAGE_H_
#define MESSAGE_H_

#include <string>


namespace MessageManager {

enum E_MESSAGE_TYPE
{
	UNKNOWN_MSG,
};

class Message
{
public:
	Message();
	virtual ~Message();

public:
	E_MESSAGE_TYPE getType();
	void getText(std::string& msg);

private:
	E_MESSAGE_TYPE m_msgType;
	std::string m_msgText;
};


} /* namespace MessageManager */
#endif /* MESSAGE_H_ */
