	           state = INASSIGN;
	         else if ((c == ' ') || (c == '\t') || (c == '\n'))
	           save = FALSE;
	         else if (c == '{')
	         { save = FALSE;
	           state = INCOMMENT;
	         }
	         else
	         { state = DONE;
	           switch (c)
	           { case EOF:
	               save = FALSE;
	               currentToken = ENDFILE;
	               break;
	             case '=':
	               currentToken = EQ;
	               break;
	             case '<':
	               currentToken = LT;
	               break;
	             case '+':
