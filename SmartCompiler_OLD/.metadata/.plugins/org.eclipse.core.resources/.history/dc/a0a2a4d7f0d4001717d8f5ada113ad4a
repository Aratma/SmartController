#include "Scanner.h"
#include "Parser.h"

Parser::Parser()
: m_pScanner(NULL)
{
}

Parser::~Parser()
{
	if (m_pScanner != NULL)
	{
		delete m_pScanner;
		m_pScanner = NULL;
	};
}


void Parser::initParser(const char* pFileName)
{
	if (m_pScanner == NULL)
	{
		m_pScanner = new Scanner();
	}

	m_pScanner->initScanner(pFileName);
}

void Parser::parse()
{
}

