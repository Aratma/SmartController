#include <stdio.h>
#include <string.h>
#include "Token.h"

using namespace std;

Token::Token()
{
	m_tokType = ::ERROR_TOK;
	m_curLen = 0;
	memset(m_tokText, '\0', MAX_TOK_LEN);
}

Token::~Token()
{
}

Token::Token(ETokenType t, const char* pStr)
{
	this->m_tokType = t;
	this->m_curLen = sizeof(pStr) / sizeof(char*);
	memcpy(this->m_tokText, pStr, MAX_TOK_LEN);
}

Token::Token(const Token &t)
{
	this->m_tokType = t.m_tokType;
	this->m_curLen = t.m_curLen;
	memcpy(this->m_tokText, t.m_tokText, MAX_TOK_LEN);
}

Token& Token::operator= (const Token &t)
{
	this->m_tokType = t.m_tokType;
	this->m_curLen = t.m_curLen;
	memcpy(this->m_tokText, t.m_tokText, MAX_TOK_LEN);

	return *this;
}


char* Token::getTextPtr()
{
	return m_tokText;
}

bool Token::appendChar(const char* pCh)
{
	if (m_curLen < MAX_TOK_LEN-1)
	{
		m_tokText[m_curLen] = *pCh;
		return true;
	}

	return false;
}






